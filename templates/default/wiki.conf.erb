<VirtualHost *:80>

	ServerName wiki

	ServerAdmin ebordeleau@myfastmail.com
	DocumentRoot /var/www
	LogLevel debug

	ErrorLog ${APACHE_LOG_DIR}/wiki_error.log
	CustomLog ${APACHE_LOG_DIR}/wiki_access.log combined

    DirectoryIndex index.html index.php 
    
    Alias /wiki /var/www/wikisite

   	<directory /var/www/wikisite>
     		Options +Indexes +FollowSymLinks +MultiViews
     		Order allow,deny
            Allow from all
   	</directory>

	UseCanonicalName Off
	ProxyRequests Off
	RewriteEngine On
	
</VirtualHost>