<VirtualHost *:80>

	ServerName wiki

	ServerAdmin "#{node['apache']['admin_mail']}"
	DocumentRoot  "#{node['apache']['htmldocroot']}"
	LogLevel debug

	ErrorLog ${APACHE_LOG_DIR}/wiki_error.log
	CustomLog ${APACHE_LOG_DIR}/wiki_access.log combined

    DirectoryIndex index.html index.php 
   	<directory "#{node['apache']['htmldocroot']}" >
     		Options +Indexes +FollowSymLinks +MultiViews
			Require all granted
   	</directory>
	UseCanonicalName Off
	ProxyRequests Off
	RewriteEngine On
	
</VirtualHost>